<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="KoguiApp.MainPage"
             BackgroundColor="#0A0730">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Seção 1: Lista de Itens -->
            <Label Text="Itens" FontSize="24" TextColor="#F35DA3"/>
            <CollectionView x:Name="ItensCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#3B1476" CornerRadius="10" Padding="10" Margin="0,0,0,15" BackgroundColor="#222222">
                            <VerticalStackLayout>
                                <Label Text="{Binding Cor}" FontSize="18" TextColor="White"/>
                                <Label Text="{Binding Hex}" FontSize="14" TextColor="White"/>
                                <Label Text="{Binding Componente}" FontSize="14" TextColor="White"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Seção 2: Cores e Frase -->
            <Label Text="Cores" FontSize="24" TextColor="#F35DA3"/>
            <CollectionView x:Name="CoresCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10" Padding="10" Margin="0,0,0,15" BackgroundColor="#666666">
                            <VerticalStackLayout>
                                <Label Text="{Binding Nome}" FontSize="18" TextColor="White"/>
                                <Label Text="{Binding Hex}" FontSize="14" TextColor="White"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label x:Name="FraseLabel" FontSize="16" TextColor="White"/>

            <!-- Seção 3: Matriz/Imagem -->
            <Label Text="Objeto Final" FontSize="24" TextColor="#F35DA3" Margin="0,20,0,10"/>
            <skia:SKCanvasView x:Name="ObjetoCanvas" HeightRequest="300" WidthRequest="300"/>
            <Label x:Name="ObjetoNome" FontSize="20" TextColor="White" HorizontalOptions="Center" Margin="0,10,0,0"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
